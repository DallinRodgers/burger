<div class="container">
  <h1>Burgers!</h1>

  <div id="burger-status">
    <div class="burgers-to-eat">
      <h2>Burgers To Eat</h2>

      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="burgers-eaten">
      <h2>Devoured Burgers</h2>

      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burgerName">Burger Name:</label>
      <input type="text" id="burgerName" name="name">
    </div>

    <button type="submit" class="btn-green">Add Burger</button>
  </form>
</div>